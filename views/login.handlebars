<main class="login">
    <form action="/login" method="post" onsubmit="return validate()" >
        <input required type="email" name="username" class="field" placeholder="Username"><br>
        <input required type="password" name="password" class="field" placeholder="Password min. 8 chars"><br>
        <input type="reset" value="Clear" class="btn btn-light">
        <input type="submit" value="Submit" class="btn btn-dark">
    </form>
    <p>Or Sign In using: </p>
    <button class="google">
        <i class="fa-brands fa-google" style="color: #ffffff;"></i> Google
    </button>
</main>

<script>
    function validate(){
    let status= true;
    let pass= document.querySelectorAll(".field")[1].value;
    let cPass= document.querySelectorAll(".field")[2].value;
    if (pass === cPass){
        status= true
    }else if (pass.length >= 8){
        status= false
    } else {
        status= false
    }
    return status
}
</script>